<table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Detail</th>
      </tr>
    </thead>
    <tbody>
     <% contacts.forEach((contact , index) => { %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><a href="/contact/<%= contact.name%>"><span class="badge rounded-pill bg-success">detail</span></a></td>
          </tr>
     <% }) %>
    </tbody>
  </table>